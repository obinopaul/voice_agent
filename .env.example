# This file serves as an example for the .env file.
# Copy this file to .env and fill in your actual credentials.

# LiveKit Server credentials
# The backend agent uses LIVEKIT_URL, LIVEKIT_API_KEY, and LIVEKIT_API_SECRET.
# The frontend's API route also uses them. The frontend client uses NEXT_PUBLIC_LIVEKIT_URL.
NEXT_PUBLIC_LIVEKIT_URL="ws://localhost:7880" # Or your LiveKit Cloud URL, e.g., wss://<project-name>.livekit.cloud
LIVEKIT_URL="http://localhost:7880" # The backend needs the http URL for the RoomServiceClient
LIVEKIT_API_KEY="devkey" # Or your LiveKit Cloud API Key
LIVEKIT_API_SECRET="secret" # Or your LiveKit Cloud API Secret

# OpenAI API Key
# Used by the backend agent for the LLM and TTS.
OPENAI_API_KEY="sk-..."

# DeepGram API Key
# Used by the backend agent for STT.
DEEPGRAM_API_KEY="..."
